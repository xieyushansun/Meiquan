<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_top"
        android:layout_margin="10dp"
        >
        <EditText
                android:id="@+id/ed_message"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="随便说点什么吧"
                android:textColorHint="#C32E2E2E"
                android:textColor="#2E2E2E"
                android:textSize="14sp"
                android:padding="5dp"
                android:gravity="top"
                android:background="@null"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <ImageView
                android:id="@+id/img_showchoosedimage"
                android:layout_width="150dp"
                android:visibility="gone"
                android:layout_height="120dp" />
        </LinearLayout>

    </LinearLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_image_4"
                    />
            <ImageView
                android:id="@+id/img_chooseimage"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/icon_image_3"
                    />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_sendnews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:background="@drawable/text_button"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:layout_gravity="right|center_vertical"
            android:text="发送"
                />
    </FrameLayout>
</LinearLayout>